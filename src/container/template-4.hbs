
<header class="header">
    <div class="">
        {{> logo}}
    </div>
    <nav class="header_nav ">
        <div class="header_nav_right">
            {{> nav list=header }}
        </div>
    </nav>
</header>


{{#with main}}
    <div class="main">
        <img src="{{image}}" alt="Main image" class="main_image">
        <div class="main_info">
            <h1 class="main_title">{{heading}}</h1>
            <p class="main_paragraph">{{descriotion}}</p>
            <a href="{{href}}" class="main_button">{{button}}</a>
        </div>
    </div>
{{/with}}


<div class="featured">
    {{#each featured}}
        {{> featured data=this}}
    {{/each}}
</div>

<div class="actions">
    {{#each actions}}
        <div class="action_content">
            <h3 class="action_title">{{heading}}</h3>
            <a href="{{url}}" class="action_button">{{text}}</a>
        </div>
    {{/each}}
</div>

<footer class="row footer">
    <div class="col-3">
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
        <div class="col-3">
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
        
    {{/each}}
</footer>


