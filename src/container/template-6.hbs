
<header class="header">
    <div class="">
        {{> logo}}
    </div>
    <nav class="header_nav ">
        <div class="header_nav_right">
            {{> nav list=header }}
        </div>
    </nav>
</header>

<div class="info_form">
    <div class="info"> 
        {{#with info}}
            <div class="info_title">{{title}}</div>
            <div class="info_discription">{{description}}</div>
        {{/with}}
    </div>
    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input type={{type}} placeholder={{placeholder}} class="form_input" name={{name}} id="form-input-{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">
            {{button}}
        </button>
        <hr class="hr">
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</div>
<div class="updates">
    {{#with updates}}
        <div class="updates_title">{{title}}</div>
        {{#each list}}
            <div class="list_content">
                <div class="list_cube">32x32</div>
                <div class="list_texts">
                    <div class="list_name">{{nickname}}</div>
                    <div class="list_details">{{description}}</div>
                </div>
            </div>
        {{/each}}
        <a href="{{show_all.url}}" class="show_all">{{show_all.text}}</a>
    {{/with}}
</div>

<div class="expirience">
    {{#with expirience}}
        <h1 class="expirience_title">{{title}}</h1>
        <span class="expirience_badge">{{badge}}</span>
        <div class="expirience_list">
            {{#each list}}
                <div class="list_item">
                    <div class="list_name">{{name}}</div>
                    <div class="list_details">{{details}}</div>
                </div>
            {{/each}}
        </div>
    {{/with}}
</div>

<footer class="row footer">
    <div class="col-3">
        {{> logo}}
        <span class="footer_copyright">&copy; 2023</span>
    </div>
    {{#each footer}}
        <div class="col-3">
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
        
    {{/each}}
</footer>


