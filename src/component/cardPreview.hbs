{{#with data}}
<div class="preview">
    <div class="preview_header">
        <span class=" preview_date">{{date}}</span>
        {{#each category}}
            <span class=" preview_category preview_category_{{id}}">{{text}}</span>
        {{/each}}
    </div>
    <strong class="preview_title">{{title}}</strong>
    <p class="preview_description">This blog post discusses various topics related to web development and design,
        including best practices and emerging
        trends.</p>
    <a href="#">Continue riding</a>
</div>
{{/with}}